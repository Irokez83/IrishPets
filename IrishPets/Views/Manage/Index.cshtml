@model IrishPets.Models.IndexViewModel
@{
    ViewBag.Title = "Manage login";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change account settings</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>Member: </dt>
        <dd>
            [ @Html.ActionLink("Change info", "ChangeInfo") ]
        </dd>

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create password", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>
