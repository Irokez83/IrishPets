@model IrishPets.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Registration";
}
<h2>@ViewBag.Title.</h2>
<h3>Linking your account @ViewBag.LoginProvider.</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Form of communication</h4>
    <hr />
    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    <p class="text-info">
        You have successfully authenticated via <strong>@ViewBag.LoginProvider</strong>
        Enter the user name for this site below and click "Register" to complete the login.
    </p>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Sing On" />
        </div>
    </div>
}

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }
