        @Html.EditorFor(model => model.PhoneNum, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
        @Html.ValidationMessageFor(model => model.PhoneNum, string.Empty, new { @class = "text-danger" })
    </div>
</div>

