@model IrishPets.Models.ContactInfoViewModel2

@if (!string.IsNullOrWhiteSpace(Model.Email))
{
    <hr />
    <h4>@Html.DisplayFor(model => Model.Email)</h4>

    if (User.IsInRole("Admin"))
    {
        <div class="row">
            @Html.LabelFor(model => model.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-4">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control datecontrol calendar col-sm-2 ", placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.Email, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    }
}

@Html.HiddenFor(model => model.Id)
<div class="row">
    @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "First name" } })
        @Html.ValidationMessageFor(model => model.FirstName, string.Empty, new { @class = "text-danger" })
    </div>
</div>

<div class="row">
    @Html.LabelFor(model => model.Surname, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-4">
        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control datecontrol calendar col-sm-2 ", placeholder = "Surname" } })
        @Html.ValidationMessageFor(model => model.Surname, string.Empty, new { @class = "text-danger" })
    </div>
</div>

<div class="row">
    @Html.LabelFor(model => model.Gender, "Gender", new { @class = "col-sm-2 control-label" })
    <div class="col-sm-4">
        @Html.EnumDropDownListFor(model => model.Gender, "Please select a Gender", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Gender, null, new { @class = "text-danger" })
    </div>
</div>

<div class="row">
    @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label col-md-2" })
    <div class="col-md-3" id="sandbox-container">
        <div class="input-group date">
            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @id = "dp", @class = "form-control", size = "16", type = "text", placeholder = "Enter Date of Birth" } })
            @Html.ValidationMessageFor(model => model.DateOfBirth, null, new { @class = "text-danger" })
            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
        </div>
    </div>
</div>

<div class="row">
    @Html.LabelFor(model => model.PhoneNum, new { @class = "col-sm-2 control-label" })
