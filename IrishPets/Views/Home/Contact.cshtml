@model IrishPets.Models.ContactUsViewModel

@{ ViewBag.Title = "Contact Us"; }

<h3>@ViewBag.Title</h3>

<div class="row background_bubbles">

    <div class="col-sm-5 thumbnail modal-content">
        <address>
            Written by <a href="mailto:@IrishPets.Properties.Resources.DefEmail_Account">Support (@IrishPets.Properties.Resources.DefEmail_Account)</a><br />
            Location: Dublin, Ireland<br />
            <abbr title="Phone">Phone:</abbr><a href="tel:@IrishPets.Properties.Resources.DefPhone">@IrishPets.Properties.Resources.DefPhone</a><br>
        </address>
    </div>

    @using (Html.BeginForm())
    {
        <div class="col-xs-12 col-sm-8 col-sm-10 thumbnail modal-content highlight_dd_IrishStamp">
            <h4>Drop Us a Line</h4>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })

            <div class="row">
                <div class="col-sm-5 col-sm-6">
                    <strong>First Name</strong>: @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                </div>

                <div class="col-sm-5 col-sm-6">
                    <strong>Last Name</strong>: @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5 col-sm-6">
                    <strong>E-mail</strong>: 
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail" })
                </div>

                <div class="col-sm-5 col-sm-6">
                    <strong>Phone</strong>: @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Phone" })
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col-lg-10">
                    <strong>Company</strong>: @Html.TextBoxFor(m => m.Company, new { @class = "form-control", @placeholder = "Company" })
                </div>

                <div class="col-sm-10">
                    <strong>Subject</strong>:
                    @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Subject" })
                </div>

                <div class="col-sm-10">
                    <strong>Comments</strong>: 
                    
                    @Html.ValidationMessageFor(m => m.Comments, null, new { @class = "text-danger" })
                    @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", rows = "12" })
                </div>
            </div>

            <div class="col-sm-6"><button type="submit" class="btn btn-success">Send</button></div>
        </div>
    }
</div>